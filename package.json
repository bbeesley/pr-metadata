{
  "name": "@beesley/pr-metadata",
  "version": "1.0.6",
  "description": "A cli tool for reading information about pull requests within github actions.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "bin": {
    "run": "bin/run.cjs"
  },
  "scripts": {
    "test": "ava",
    "pretest": "npm run lint && npm run compile",
    "lint": "xo",
    "precompile": "rm -rf dist",
    "compile:esm": "tsc -p tsconfig.json",
    "compile:cjs": "babel src --out-dir dist/cjs --extensions '.ts,.cjs,.mjs' --ignore '**/*.test.ts' --source-maps --out-file-extension '.cjs'",
    "compile": "run-p compile:*",
    "documentation": "npx documentation readme src/get-changed-files.ts --github  --require-extension=ts --parse-extension=ts --section=api --shallow",
    "prerelease": "run-p compile documentation",
    "release": "npx semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/pr-metadata.git"
  },
  "author": "Bill Beesley <bill@beesley.dev>",
  "license": "MIT",
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig-lint.json"
      ]
    }
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "func-names": [
        "error",
        "always"
      ],
      "no-await-in-loop": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "unicorn/no-array-reduce": "off",
      "import/extensions": "off",
      "n/prefer-global/process": "off"
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "multimatch": "^6.0.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@beesley/tsconfig": "^2.0.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.2",
    "@semantic-release/npm": "^10.0.2",
    "@semantic-release/release-notes-generator": "^11.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/jsdom": "^21.1.0",
    "@types/sinon": "^10.0.11",
    "@types/yargs": "^17.0.8",
    "ava": "^5.2.0",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "conventional-changelog-angular": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "documentation": "^14.0.1",
    "nock": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "semantic-release": "^21.0.0",
    "sinon": "^15.0.1",
    "typescript": "^4.9.3",
    "xo": "^0.53.1"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} ðŸš€ [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
